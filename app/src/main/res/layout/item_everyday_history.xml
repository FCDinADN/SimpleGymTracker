<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/everyday_history_margin"
        android:layout_alignBottom="@+id/pieChart"
        android:layout_alignTop="@+id/pieChart"
        android:background="@color/calendar_day_background"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_toEndOf="@+id/everyday_history_margin"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>