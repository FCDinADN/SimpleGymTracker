<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

    <com.runApp.ui.FontMerriweatherTextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/actionbar_background"
        android:textColor="@color/actionbar_text_color"
        android:textSize="20sp"
        android:id="@+id/number_picker_title"
        android:gravity="center"/>

    <NumberPicker
        android:id="@+id/numberPicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/number_picker_title"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        />

    <com.runApp.ui.FontLatoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_picker_unit"
        android:layout_toEndOf="@+id/numberPicker1"
        android:layout_alignBottom="@+id/numberPicker1"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textColor="@color/actionbar_background_dark"
        android:layout_alignTop="@+id/numberPicker1"/>

</RelativeLayout>