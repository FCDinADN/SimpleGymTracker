<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/white_25p_transparent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_above="@+id/edit_profile_save"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginBottom="19dp">

        <com.runApp.ui.FontLatoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_profile_age"
            android:hint="Age"
            android:textColorHint="@color/white"
            android:minHeight="30dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:paddingBottom="13dp"
            android:layout_marginBottom="19dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/edittext_underline"
            android:gravity="center"/>

        <com.runApp.ui.FontLatoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_profile_weight"
            android:hint="Weight"
            android:textColorHint="@color/white"
            android:minHeight="30dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:paddingBottom="13dp"
            android:layout_marginBottom="19dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@drawable/edittext_underline"
            android:gravity="center"/>

        <com.runApp.ui.FontLatoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_profile_height"
            android:text="Height"
            android:inputType="number"
            android:textColorHint="@color/white"
            android:minHeight="30dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textSize="18sp"
            android:paddingBottom="13dp"
            android:textColor="@color/white"
            android:background="@drawable/edittext_underline"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7dp"
            android:layout_marginTop="19dp"
            android:weightSum="2">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_profile_man"
                android:textSize="8pt"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Man"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_profile_woman"
                android:layout_weight="1"
                android:textSize="8pt"
                android:textColor="@color/white"
                android:text="Woman"/>
        </LinearLayout>
    </LinearLayout>

    <com.runApp.ui.FontMerriweatherTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_default_height"
        android:id="@+id/edit_profile_save"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="SAVE"
        android:gravity="center"
        android:textColor="@color/save_btn_text_color"
        android:textSize="20sp"
        android:background="@drawable/save_btn_bg"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        />

</RelativeLayout>