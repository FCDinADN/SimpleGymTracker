<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="selectableItemBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/item_rounded_primary_color_bg</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textSize">8pt</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/light_grey</item>
    </style>

</resources>
